{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ChatDb": ""
  },
  "Redis": {
    "Connection": ""
  },
  "RabbitMQ": {
    "Host": "",
    "Username": "",
    "Password": ""
  },
  "OpenTelemetry": {
    "Endpoint": "http://jaeger:4317"
  },
  "Chat": {
    "MaxConversationsPerUser": 100,
    "MaxMessagesPerConversation": 10000,
    "MessageRetentionDays": 90
  },
  "FileStorage": {
    "BasePath": "./uploads",
    "BaseUrl": "http://localhost:5000/files",
    "MaxFileSizeBytes": 52428800,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".mp4", ".webm", ".mov", ".avi", ".pdf", ".doc", ".docx", ".txt", ".md", ".zip", ".7z", ".tar", ".gz", ".json", ".xml", ".csv", ".yaml", ".yml"],
    "ThumbnailSizes": {
      "Small": "150x150",
      "Medium": "300x300",
      "Large": "600x600"
    }
  }
}
