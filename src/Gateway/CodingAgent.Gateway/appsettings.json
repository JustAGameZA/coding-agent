{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "Auth": {
    "Authority": "https://localhost:5005",
    "Audience": "coding-agent-api",
    "ValidateIssuer": false,
    "ValidateAudience": false,
    "RequireHttpsMetadata": false
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },
  "ReverseProxy": {
    "Routes": {
      "chat-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        }
      },
      "orchestration-route": {
        "ClusterId": "orchestration-cluster",
        "Match": {
          "Path": "/api/orchestration/{**catch-all}"
        }
      },
      "ml-classifier-route": {
        "ClusterId": "ml-classifier-cluster",
        "Match": {
          "Path": "/api/ml/{**catch-all}"
        }
      },
      "github-route": {
        "ClusterId": "github-cluster",
        "Match": {
          "Path": "/api/github/{**catch-all}"
        }
      },
      "browser-route": {
        "ClusterId": "browser-cluster",
        "Match": {
          "Path": "/api/browser/{**catch-all}"
        }
      },
      "cicd-monitor-route": {
        "ClusterId": "cicd-monitor-cluster",
        "Match": {
          "Path": "/api/cicd/{**catch-all}"
        }
      },
      "dashboard-route": {
        "ClusterId": "dashboard-cluster",
        "Match": {
          "Path": "/api/dashboard/{**catch-all}"
        }
      },
      "frontend-route": {
        "ClusterId": "frontend-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "Order": 100
      }
    },
    "Clusters": {
      "chat-cluster": {
        "Destinations": {
          "chat-1": {
            "Address": "http://localhost:5001/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "orchestration-cluster": {
        "Destinations": {
          "orchestration-1": {
            "Address": "http://localhost:5002/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "ml-classifier-cluster": {
        "Destinations": {
          "ml-classifier-1": {
            "Address": "http://localhost:5003/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "github-cluster": {
        "Destinations": {
          "github-1": {
            "Address": "http://localhost:5004/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "browser-cluster": {
        "Destinations": {
          "browser-1": {
            "Address": "http://localhost:5005/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "cicd-monitor-cluster": {
        "Destinations": {
          "cicd-monitor-1": {
            "Address": "http://localhost:5006/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "dashboard-cluster": {
        "Destinations": {
          "dashboard-1": {
            "Address": "http://localhost:5007/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "frontend-cluster": {
        "Destinations": {
          "frontend-1": {
            "Address": "http://localhost:4200/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/"
          }
        }
      }
    }
  }
}
