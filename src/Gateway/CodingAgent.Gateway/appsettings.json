{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithThreadId"],
    "Properties": {
      "Application": "CodingAgent.Gateway"
    }
  },
  "AllowedHosts": "*",

  "Frontend": {
    "Origins": ["http://localhost:4200"]
  },

  "Authentication": {
    "Jwt": {
      "Issuer": "http://localhost:5000",
      "Audience": "coding-agent-api",
      "SecretKey": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG"
    }
  },

  "Redis": {
    "Connection": "localhost:6379"
  },

  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317"
  },

  "Features": {
    "UseLegacyChat": false,
    "UseLegacyOrchestration": false
  },

  "TrafficRouting": {
    "Chat": {
      "Percentage": 100
    },
    "Orchestration": {
      "Percentage": 100
    }
  },

  "DualWrite": {
    "Chat": {
      "Enabled": false,
      "LegacyUrl": ""
    },
    "Orchestration": {
      "Enabled": false,
      "LegacyUrl": ""
    }
  },

  "LegacySystem": {
    "Chat": {
      "BaseUrl": ""
    },
    "Orchestration": {
      "BaseUrl": ""
    }
  },

  "ReverseProxy": {
    "Routes": {
      "chat-hub-negotiate-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/hubs/chat/negotiate"
        },
        "Order": 1,
        "Metadata": { "route": "chat-hub-negotiate" },
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "chat-hub-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/hubs/chat"
        },
        "Order": 2,
        "Metadata": { "route": "chat-hub" },
        "Transforms": [
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "chat-conversations-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/conversations/{**catch-all}"
        },
        "Order": 3,
        "Metadata": { "route": "chat-conversations" },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "chat-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        },
        "Order": 4,
        "Metadata": { "route": "chat" },
        "Transforms": [
          { "PathRemovePrefix": "/api/chat" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "orchestration-route": {
        "ClusterId": "orchestration-cluster",
        "Match": {
          "Path": "/api/orchestration/{**catch-all}"
        },
        "Metadata": { "route": "orchestration" },
        "Transforms": [
          { "PathRemovePrefix": "/api/orchestration" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "github-route": {
        "ClusterId": "github-cluster",
        "Match": { "Path": "/api/github/{**catch-all}" },
        "Metadata": { "route": "github" },
        "Transforms": [
          { "PathRemovePrefix": "/api/github" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "browser-route": {
        "ClusterId": "browser-cluster",
        "Match": { "Path": "/api/browser/{**catch-all}" },
        "Metadata": { "route": "browser" },
        "Transforms": [
          { "PathRemovePrefix": "/api/browser" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "cicd-route": {
        "ClusterId": "cicd-cluster",
        "Match": { "Path": "/api/cicd/{**catch-all}" },
        "Metadata": { "route": "cicd" },
        "Transforms": [
          { "PathRemovePrefix": "/api/cicd" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "dashboard-route": {
        "ClusterId": "dashboard-cluster",
        "Match": { "Path": "/api/dashboard/{**catch-all}" },
        "Metadata": { "route": "dashboard" },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "auth-health-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/health" },
        "Order": 1,
        "Metadata": { "route": "auth-health" },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Order": 2,
        "Metadata": { "route": "auth" },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "chat-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "SessionAffinity": {
          "Enabled": true,
          "Policy": "Cookie",
          "AffinityKeyName": ".AspNetCore.Affinity",
          "FailurePolicy": "Redistribute"
        },
        "HttpRequest": {
          "Version": "2.0",
          "AllowResponseBuffering": false
        },
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "chat-service": { "Address": "http://chat-service:5001" }
        }
      },
      "orchestration-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "orchestration-service": {
            "Address": "http://orchestration-service:5002"
          }
        }
      },
      "github-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "github-service": { "Address": "http://github-service:5004" }
        }
      },
      "browser-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "browser-service": { "Address": "http://browser-service:5005" }
        }
      },
      "cicd-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "cicd-monitor-service": {
            "Address": "http://cicd-monitor-service:5006"
          }
        }
      },
      "dashboard-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "dashboard-bff": { "Address": "http://dashboard-bff:5007" }
        }
      },
      "auth-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": { "Enabled": true },
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Path": "/health"
          }
        },
        "Destinations": {
          "auth-service": { "Address": "http://auth-service:5008" }
        }
      }
    }
  }
}
